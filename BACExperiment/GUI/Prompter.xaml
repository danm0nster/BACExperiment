<Window x:Class="BACExperiment.GUI.Prompter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BACExperiment.GUI"
        mc:Ignorable="d"
        Title="Prompter" Height="700"  Width="1000" ResizeMode="NoResize" >
    <Grid>
       
        <ScrollViewer x:Name="scroller" Margin="0">
            <TextBox x:Name="prompterText" Margin="10" />
        </ScrollViewer>
    </Grid>
</Window>
