<Window x:Class="BACExperiment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BACExperiment"
        mc:Ignorable="d"
        Title="MainWindow" Height="811.387" Width="965.715" ResizeMode="NoResize" Loaded="Window_Loaded" >
    <Grid Margin="0,0,0,6">

        <TabControl x:Name="tabControl"  Margin="0,0,10,23">
            <TabItem Header="Session recording" Width="150">
                <Grid>
                    <GroupBox x:Name="groupBox"  Header="Stats" Margin="10,0" Height="176" VerticalAlignment="Top" Background="AliceBlue">
                        <WrapPanel Margin="5,5" Background="AliceBlue">
                            <StackPanel Orientation="Vertical"  Margin="0">
                                <Button x:Name="OpenBtn" Content="Open Stimuly Window" Click="OpenBtn_Click" Margin="10" Height="40"/>
                                <Button x:Name="StartBtn" Content="Start stimuly" Click="StartBtn_Click" Margin="10" Height="40" IsEnabled="False"/>
                            </StackPanel>
                            <GroupBox Header="Stimuly settings" Height="129">
                                <StackPanel Orientation="Vertical" Width="250" Margin="0,0,0,0">
                                    <WrapPanel Height="25" Margin="0,0,0,2">
                                        <Label Content="Course mode :" Width="116"></Label>
                                        <ComboBox x:Name="ModeSelect" Width="134" IsEnabled="False" />
                                    </WrapPanel>
                                    <WrapPanel Height="25" Margin="0,2,0,2">
                                        <Label Content="Course Complexity" Height="25" Width="116"></Label>
                                        <Slider x:Name="complexitySlider" Height="25" Width="133"  TickFrequency="1" TickPlacement="BottomRight" Maximum="2" Value="1"></Slider>
                                    </WrapPanel>
                                    <WrapPanel Height="25" Margin=" 0,2">
                                        <Label Content="Course speed :" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="116"></Label>
                                        <Slider x:Name="SpeedSlider" Height="25" Width="134" Minimum="1" TickFrequency="1" Maximum="5" TickPlacement="BottomRight" Value="1" ></Slider>
                                    </WrapPanel>
                                    <WrapPanel Height="25" Margin="0">
                                        <CheckBox x:Name="RandomCheck" Content="Random values " Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="117" IsEnabled="False"/>
                                        <CheckBox x:Name="TrajectoryCheck" Content="Show trajectory" Height="25" Width="132" VerticalAlignment="Center"  />
                                    </WrapPanel>
                                </StackPanel>
                            </GroupBox>

                            <GroupBox Header="Prompter settings " Margin="0,0,0,0" Width="299">
                                <StackPanel Margin="0" >
                                    <WrapPanel Height="25" Margin="0"  >
                                        <Label Content="Speed :" Width="100" HorizontalContentAlignment="Right" Margin="0"/>
                                        <Slider x:Name="prompterSpeed" Width="136" Minimum="1" Maximum="10" TickFrequency="1" TickPlacement="BottomRight" Margin="0" IsSnapToTickEnabled="True"/>
                                        <TextBox x:Name="prompterSpeedTxt" Text="{Binding ElementName=prompterSpeed,Path=Value}" Width="43" HorizontalContentAlignment="Right" Margin="2" ></TextBox>
                                    </WrapPanel>
                                    <WrapPanel Height="25" Margin="0">
                                        <Label Content="Text size :" HorizontalContentAlignment="Right" Width="101"></Label>
                                        <Slider x:Name="TextSizeSlider" Width="135" Minimum="1" Maximum="50" TickFrequency="3" Value="10" TickPlacement="BottomRight" IsSnapToTickEnabled="True" ValueChanged="TextSizeSlider_ValueChanged" ></Slider>
                                        <TextBox x:Name="TextSizeTxt" Text="{Binding ElementName=TextSizeSlider,Path=Value}" Width="43" HorizontalContentAlignment="Right" Margin="2" ></TextBox>
                                    </WrapPanel>
                                    <WrapPanel Height="25" Margin="0">
                                        <Label Content="Path :" Width="101" HorizontalContentAlignment="Right"/>
                                        <TextBox x:Name="pathTxt" Text="resources/prompterText.txt" Width="135" />
                                        <Button x:Name="BrowseBtn" Content="Browse" Margin="2"  Click="BrowseBtn_Click"/>
                                    </WrapPanel>
                                    <WrapPanel Margin="0">
                                        <Button x:Name="prompterOpen" Height="25" Width="75" Content="Open" Click="prompterOpen_Click" Margin="2" />
                                        <Button x:Name="prompterPlay" Content="Play"  Click="prompterPlay_Click" Margin="2" IsEnabled="False"/>
                                        <Button x:Name="prompterPause" Content="Pause" Margin="2"  Click="prompterPause_Click" IsEnabled="False"/>
                                        <Button x:Name="prompterStop" Content="Stop" Margin="2" Click="prompterStop_Click" IsEnabled="False" />
                                    </WrapPanel>
                                </StackPanel>
                            </GroupBox>
                        </WrapPanel>
                    </GroupBox>
                    <GroupBox x:Name="groupBox1" Header="Microphone" Margin="10,176,625,10" Background="Aqua">
                        <StackPanel Margin="10,10">
                            <WrapPanel Height="35">
                                <Label Content="Microphone 1 :" Height="25" Width="100"></Label>
                                <ListBox Width="150" Height="25" Margin="5" ></ListBox>
                            </WrapPanel>
                            <WrapPanel Height="35">
                                <Label Content="Volume :" Height="25" Width="100"></Label>
                                <Slider Width="154" Margin="5" />
                            </WrapPanel>
                            <WrapPanel Height="100">
                                <Canvas></Canvas>
                            </WrapPanel>
                            <WrapPanel Height="35">
                                <Label Content="Microphone2 :" Height="25" Width="100"></Label>
                                <ListBox Width="150" Height="25" Margin="5" ></ListBox>
                            </WrapPanel>
                            <WrapPanel Height="35">
                                <Label Content="Volume :" Height="25" Width="100"></Label>
                                <Slider Width="154" Margin="5" />
                            </WrapPanel>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox x:Name="groupbox2" Header="Camera" Margin="320,176,299,10" Background="Aquamarine" >
                        <StackPanel Margin="10,10,8,10">
                            <WrapPanel Height="53">

                            </WrapPanel>
                            <WrapPanel>
                                <Image x:Name="image" Height="100"/>
                            </WrapPanel>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox x:Name="groupbox3" Header="Controllers" Margin="646,176,10,10" Background="Bisque" >
                        <StackPanel Margin="10,10"  />
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Video" Width="150">
            </TabItem>
            <TabItem Header="Audio" Width="150">
            </TabItem>
            <TabItem x:Name="ControllerTab" Header="Controllers" Width="150" Loaded="ControllerTab_Loaded">
                <UniformGrid>
                    <StackPanel Margin="5,5,5,-278">
                        <GroupBox x:Name="WM1_groupbox" Header="Wiimote 1" Height="615"  >
                            <StackPanel Margin="0,0,0,-22">
                                <WrapPanel>
                                    <Label Content="Status :" Width="91"/>
                                    <Label x:Name="WM1Status_Lbl" Content="No Wii Remote" Width="125"></Label>
                                    <Label Content="'Device path :" Width="91"/>
                                    <Label x:Name="WM1_Path_Lbl" Width="125"></Label>
                                </WrapPanel>
                                <WrapPanel>
                                    <Label Content="Batterie :" Width="92"/>
                                    <ProgressBar x:Name="wm1_progressbar" Width="320" Value="0"/>
                                </WrapPanel>
                                <WrapPanel Height="145">
                                    <TextBlock x:Name="Console_Textbox_WM1" Margin="10,10,10,10" Height="123" Width="426" Background="White"/>
                                </WrapPanel>
                                <StackPanel Height="408">
                                    <WrapPanel Height="135">
                                        <GroupBox Header="Accelerometer" Height="114" Margin="10,10,10,10" Width="200">
                                            <StackPanel Width="205" Margin="0,0,-17,-22">
                                                <WrapPanel Height="25">
                                                    <Label Content="X Coordinate :"/>
                                                    <Label x:Name="WM1_Accel_X" Content="0.0"/>
                                                </WrapPanel>
                                                <WrapPanel Height="25">
                                                    <Label Content="Y Coordinate :"/>
                                                    <Label x:Name="WM1_Accel_Y" Content="0.0"/>
                                                </WrapPanel>
                                                <WrapPanel Height="25">
                                                    <Label Content="Z Coordinate :"/>
                                                    <Label x:Name="WM1_Accel_Z" Content="0.0"/>
                                                </WrapPanel>
                                            </StackPanel>
                                        </GroupBox>
                                        <GroupBox Header="IR" Height="115" Margin="10,10,10,10" Width="200">
                                            <StackPanel Width="205" Margin="0,0,-17,-22">
                                                <WrapPanel Height="25">
                                                    <Label Content="IR1 :"/>
                                                    <Label x:Name="WM1_IR1" Content="0.0"/>
                                                </WrapPanel>
                                                <WrapPanel Height="25">
                                                    <Label Content="IR2 :"/>
                                                    <Label x:Name="WM1_IR2" Content="0.0"/>
                                                </WrapPanel>
                                                <WrapPanel Height="25">
                                                    <Label Content="IR3 :"/>
                                                    <Label x:Name="WM1_IR3" Content="0.0"/>
                                                </WrapPanel>
                                                <WrapPanel Height="25">
                                                    <Label Content="IR4 :"/>
                                                    <Label x:Name="WM1_IR4" Content="0.0"/>
                                                </WrapPanel>
                                            </StackPanel>
                                        </GroupBox>
                                    </WrapPanel>
                                    <StackPanel Height="207">
                                        <Canvas x:Name="IRImage"  Height="200" MaxHeight="200" Width="300" Background="Black"   Margin="74,0"   >
                                            <Ellipse x:Name="IRSensor11" StrokeThickness="5" Stroke="Blue"   Width="5" Fill="Blue" Height="5"/>
                                            <Ellipse x:Name="IRSensor12" StrokeThickness="5" Stroke="Yellow" Width="5" Fill="Yellow" Height="5" />
                                            <Ellipse x:Name="IRSensor13" StrokeThickness="5" Stroke="Red"    Width="5" Height="5"   Fill="Red" />
                                            <Ellipse x:Name="IRSensor14" StrokeThickness="5" Stroke="Green"  Width="5" Height="5" Fill="Green" />
                                            <Ellipse x:Name="MidPoint1"  StrokeThickness="5" Stroke="White"  Width="5" Height="5" Fill="White" />
                                        </Canvas>

                                    </StackPanel>
                                    <WrapPanel Height="63">
                                        <Button x:Name="WM1_Detect" Content="Connect Wiimote 1" Margin="15" Click="WM1_Detect_Click"/>
                                        <Button x:Name="WM1_Disconect" Content="Disconect Wiimote" Margin="15" Click="WM1_Disconect_Click"/>
                                    </WrapPanel>
                                </StackPanel>

                            </StackPanel>

                        </GroupBox>

                    </StackPanel>
                    <StackPanel Margin="5,5,5,-337">
                        <GroupBox x:Name="WM2_groupbox" Header="Wiimote 2" Height="616">
                            <StackPanel Margin="0,0,0,1">
                                <WrapPanel>
                                    <Label Content="Status :" Width="91"/>
                                    <Label x:Name="WM2Status_Lbl" Content="No Wii Remote" Width="125"></Label>
                                    <Label Content="'Device path :" Width="91"/>
                                    <Label x:Name="WM2_Path_Lbl" Width="125"></Label>
                                </WrapPanel>
                                <WrapPanel>
                                    <Label Content="Batterie :" Width="92"/>
                                    <ProgressBar x:Name="wm2_progressbar" Width="320" Value="0"/>
                                </WrapPanel>
                                <WrapPanel Height="145">
                                    <TextBlock x:Name="Console_Textbox_WM2" Margin="10,10,10,10" Height="123" Width="426" Background="White"/>
                                </WrapPanel>
                                <StackPanel Height="339">
                                    <WrapPanel Height="135">
                                        <GroupBox Header="Accelerometer" Height="114" Margin="10,10,10,10" Width="200">
                                            <StackPanel Width="205" Margin="0,0,-17,-22">
                                                <WrapPanel Height="25">
                                                    <Label Content="X Coordinate :"/>
                                                    <Label x:Name="WM2_Accel_X" Content="0.0"/>
                                                </WrapPanel>
                                                <WrapPanel Height="25">
                                                    <Label Content="Y Coordinate :"/>
                                                    <Label x:Name="WM2_Accel_Y" Content="0.0"/>
                                                </WrapPanel>
                                                <WrapPanel Height="25">
                                                    <Label Content="Z Coordinate :"/>
                                                    <Label x:Name="WM2_Accel_Z" Content="0.0"/>
                                                </WrapPanel>
                                            </StackPanel>
                                        </GroupBox>
                                        <GroupBox Header="IR" Height="115" Margin="10,10,10,10" Width="200">
                                            <StackPanel Width="205" Margin="0,0,-17,-22">
                                                <WrapPanel Height="25">
                                                    <Label Content="IR1 :"/>
                                                    <Label x:Name="WM2_IR1" Content="0.0"/>
                                                </WrapPanel>
                                                <WrapPanel Height="25">
                                                    <Label Content="IR2 :"/>
                                                    <Label x:Name="WM2_IR2" Content="0.0"/>
                                                </WrapPanel>
                                                <WrapPanel Height="25">
                                                    <Label Content="IR3 :"/>
                                                    <Label x:Name="WM2_IR3" Content="0.0"/>
                                                </WrapPanel>
                                                <WrapPanel Height="25">
                                                    <Label Content="IR4 :"/>
                                                    <Label x:Name="WM2_IR4" Content="0.0"/>
                                                </WrapPanel>
                                            </StackPanel>
                                        </GroupBox>
                                    </WrapPanel>
                                    <StackPanel>
                                        <Canvas x:Name="IRImage2"  Height="200" MaxHeight="200" Width="300" Background="Black"  >
                                            <Ellipse x:Name="IRSensor21" StrokeThickness="5" Stroke="Blue" Width="5" Height="5"  />
                                            <Ellipse x:Name="IRSensor22" StrokeThickness="5" Stroke="Yellow" Width="5" Height="5"  />
                                            <Ellipse x:Name="IRSensor23" StrokeThickness="5" Stroke="Red" Width="5" Height="5"  />
                                            <Ellipse x:Name="IRSensor24" StrokeThickness="5" Stroke="Green" Width="5" Height="5" />
                                            <Ellipse x:Name="MidPoint2"  StrokeThickness="5" Stroke="White" Width="5" Height="5"/>
                                        </Canvas>

                                    </StackPanel>
                                </StackPanel>
                                <WrapPanel Height="67">
                                    <Button x:Name="WM2_Detect" Content="Connect Wiimote 2" Margin="15" Click="WM2_Detect_Click"/>
                                    <Button x:Name="WM2_Disconect" Content="Disconect Wiimote" Margin="15" Click="WM1_Disconect_Click"/>
                                </WrapPanel>

                            </StackPanel>

                        </GroupBox>
                    </StackPanel>
                </UniformGrid>

            </TabItem>
            <TabItem Header="About" Width="150">
            </TabItem>

        </TabControl>
        <StatusBar Margin="0,731,0,-5"/>



    </Grid>
</Window>
