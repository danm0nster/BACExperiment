<Window x:Class="BACExperiment.StimulyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BACExperiment"
        mc:Ignorable="d"
        Title="StimulyWindow" MinHeight="1000" MinWidth="1000" ResizeMode="CanResizeWithGrip" Closed="Window_Closed" Loaded="Window_Loaded">
    <Grid>
        <Border>
            <Canvas x:Name="StimulyCanvas" RenderTransformOrigin="0.5,0.5" Width="0" Height="0 " RenderTransform="1 0 0 -1 0 0" >
                <Ellipse x:Name="StimulyEllipse1" Width="100" Height="100" Canvas.Top="-50" Canvas.Left="-50" Stroke="Salmon" StrokeThickness="3" ClipToBounds="True" ></Ellipse>
                <Ellipse x:Name="Pointer1" Width="15" Height="15" Canvas.Top="100" Canvas.Left="100"  Stroke="CadetBlue" StrokeThickness="8" Visibility="Hidden"/>
                <Ellipse x:Name="Pointer2" Width="15" Height="15" Canvas.Top="150" Canvas.Left="150"  Stroke="DarkBlue" StrokeThickness="8" Visibility="Hidden"/>
                
                
            </Canvas>
        </Border>
        <Ellipse Fill="Black" Stroke="Black" HorizontalAlignment="Center"/>
        <Ellipse Fill="Black" Height="1" Stroke="Black" VerticalAlignment="Center" />
    </Grid>
</Window>
